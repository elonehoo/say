{
  "name": "@elonehoo/say",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "author": "Elone Hoo <huchengyea@163.com>",
  "description": "TTS (text to speech) for node.js. send text from node.js to your speakers.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elonehoo/say"
  },
  "homepage": "https://github.com/elonehoo/say#readme",
  "bugs": "https://github.com/elonehoo/say/issues",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && vite build",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@elonehoo/eslint-config": "2.0.0",
    "@elonehoo/rimraf": "^0.0.1",
    "@elonehoo/vite-plugin-type-ts": "^0.0.1",
    "@types/node": "18.16.0",
    "@vitest/coverage-c8": "^0.30.1",
    "bumpp": "9.1.0",
    "c8": "^7.13.0",
    "eslint": "8.39.0",
    "pnpm": "7.32.2",
    "typescript": "4.9.5",
    "vite": "4.3.1",
    "vitest": "0.30.1"
  },
  "dependencies": {
    "@types/one-time": "^0.0.1",
    "one-time": "^1.0.0"
  }
}
